<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.sxd.invmgmt.dao.ex.ExDao">

    <insert id="insert" parameterType="ExEntity">
        INSERT ignore INTO
        test(id, msg)
        VALUES
        (NULL ,#{msg})
    </insert>

    <update id="update" parameterType="ExEntity">
        UPDATE
        test
        SET
        msg = #{msg}
        WHERE
        id = #{id}
    </update>

    <delete id="delete" parameterType="ExEntity">
        DELETE FROM test
        WHERE id = #{id}
    </delete>

    <select id="selectById" parameterType="ExEntity" resultType="ExEntity">
        SELECT id, msg
        FROM test
        WHERE
        id = #{id}
    </select>

</mapper>